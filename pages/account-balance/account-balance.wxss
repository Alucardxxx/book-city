/* pages/account-balance/account-balance.wxss */

.header{
  display: flex;
  align-items: center;
  width: 650rpx;
  margin: 0 auto;
}

.header text{
  display: block;
  font-size: 40rpx;
  color: #fff;
   margin-left: 200rpx;
}

.header image{
   width: 40rpx;
  height: 40rpx;

}

.balance-body{
  width: 650rpx;
  margin: 0 auto;
  background-color: #2b323b;
  padding: 40rpx 0;
  border-radius: 20rpx;
  margin-top: 40rpx;


}

.balance-text{
  display: block;
      font-size: 40rpx;
      color: #75808d;
      padding-left: 40rpx;
}

.balance-number{
  display: block;
  font-size: 100rpx;
  color: #fff;
  padding-left: 40rpx;
  padding-top: 10rpx;
  
  
}

.sign-out{
  width: 100%;
  height: 140rpx;
  background-color: #fb6894;
  font-size: 40rpx;
  color: #fff;
  line-height: 144rpx;
  text-align: center;
  position: absolute;
  bottom:0;
  border-radius: 8rpx;
  border: 8rpx solid #22272d;
  box-sizing: border-box;

}