/* pages/recharge/recharge.wxss */

.header{
  display: flex;
  justify-content: center;
  width: 650rpx;
  margin: 0 auto;
}

.header text{
  display: block;
  font-size: 40rpx;
  color: #fff;
}

.header image{
   width: 40rpx;
  height: 40rpx;

}

.balance-body{
  width: 650rpx;
  margin: 0 auto;
  background-color: #2b323b;
  padding: 40rpx 0;
  border-radius: 20rpx;
  margin-top: 40rpx;


}

.balance-text{
  display: block;
      font-size: 40rpx;
      color: #75808d;
      padding-left: 40rpx;
}

.balance-number{
  display: flex;
  font-size: 90rpx;
  color: #fff;
  margin:0 40rpx;
  padding-top: 10rpx;
  border-bottom: 2rpx solid #75808d;
  align-items: center;
  
}

.balance-number input{
padding: 0;
margin: 0;
height: 98rpx;
font-size:90rpx;
}

.sign-out{
  width: 100%;
  height: 140rpx;
  background-color: #2b323b;
  font-size: 40rpx;
  color: #fff;
  line-height: 144rpx;
  text-align: center;
  position: absolute;
  bottom:0;
  border-radius: 8rpx;
  border: 4rpx solid #22272d;
  box-sizing: border-box;

}