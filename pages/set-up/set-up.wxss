/* pages/set-up/set-up.wxss */

.header{
  display: flex;
  justify-content: center;
  width: 650rpx;
  margin: 0 auto;
}

.header text{
  display: block;
  font-size: 40rpx;
  color: #fff;
}



.information-bar{
display: flex;
justify-content: flex-end;
flex-wrap: wrap;
}

.information-bar-list{
  padding: 40rpx 0;
  width: 688rpx;
  display: flex;
  font-size: 34rpx;
  color: #afb3be;
  justify-content: space-between;
  border-bottom: 2rpx solid #50545a;
}

.information-bar-list view{
  margin-right: 40rpx;
}

.information-bar-list .details{
      display: flex;
      align-items: center;
}

.details image{
  width: 40rpx;
  height: 40rpx;
}

.information-bar-list .text{
  font-size: 26rpx;

}

.sign-out{
  width: 100%;
  height: 140rpx;
  background-color: #2e363f;
  font-size: 38rpx;
  color: #afb3be;
  line-height: 144rpx;
  text-align: center;
  position: absolute;
  bottom:0;
  border-radius: 8rpx;
  border: 4rpx solid #22272d;
  box-sizing: border-box;

}