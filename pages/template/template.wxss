}

.page-title {
  width: 650rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 0 60rpx 0rpx;
  margin: 0 auto;
}

.ranking {
  font-size: 36rpx;
  color: #fff;
}

.view-all {
  display: flex;
  align-items: center;
}

.view-all image{
width: 26rpx;
  height: 26rpx;
  margin-top: 4rpx;
}
.view-all text{
font-size: 26rpx;
  color: #999faf;
  padding-right: 6rpx;
}



.new-release{
  width: 650rpx;
  display: flex;
  justify-content: space-between;
  margin:0 auto;
  flex-wrap: wrap;
  border-bottom: 2rpx solid #32363f;

}

.new-release-list {
padding: 0 0 80rpx 0;
}

.new-release-list image{
  display: block;
  width: 192rpx;
  height:320rpx;
  margin:20rpx 0;
  
}



.new-release-list text{
display: block;

}

.new-book{
  font-size: 26rpx;
  color: #fff;
