/* pages/template/template.wxss */

.exprole1-body{
  width: 390rpx; 
  margin: 0 auto;
  text-align: center;
  padding:60rpx;
}

.exprole1-img{
  display: block;
  width: 390rpx;
  height: 580rpx;
  margin: 40rpx 0;
}

.exprole1-book{
  display: block;
  font-size: 36rpx;
  color: #fff;
}

.exprole1-author{
  display: block;
  font-size: 28rpx;
  color: #7c7f85;
  padding-top: 20rpx;
  padding-bottom: 60rpx;

}

.readerser-list{
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
    border-top: 2rpx solid #3b3d3f;
}

.readerser-list image{
  border-radius: 50%;
  margin: 0 8rpx;
  width: 74rpx;
  height: 74rpx;
}

.people-number{
  display: block;
  font-size: 24rpx;
 color:  #999faf;
 padding-top: 20rpx;

}

.exprole2-book{
  margin: 0 auto;
  width: 570rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  height: 1100rpx;
  padding-top: 100rpx;
}

.exprole2-book-list{
  text-align: center;
}

.exprole2-book-list image{
  display: block;
  width: 270rpx;
  height: 400rpx;
}

.exprole2-book-list text{
  display: block;
  color: #fff;
  font-size: 28rpx;
 padding-top: 40rpx;

}

.share-body{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
background-color: #363947;
}

.share-list{
  width: 560rpx;
  display: flex;
justify-content: space-between;
}

.share-list image{
width: 50rpx;
height: 50rpx;
border-radius: 50%;
border: 10rpx solid #fff;
background-color: #fff;
}

.close{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 6;
  width: 24rpx;
  height: 24rpx;
 background-color: rgba(0, 0, 0, 0.781);
 border-radius: 50%;
 border: 8rpx solid rgba(0, 0, 0, 0.781);
}